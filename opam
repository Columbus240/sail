build: [make "INSTALL_DIR=%{prefix}%" "SHARE_DIR=%{sail-legacy:share}%" "sail"]
install: [make "INSTALL_DIR=%{prefix}%" "SHARE_DIR=%{sail-legacy:share}%" "install"]
depends: [
  "ocaml" {>= "4.06.1"}
  "ocamlfind" {build}
  "ocamlbuild" {build}
  "zarith"
  "ott" {>= "0.28" & build}
